<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout android:layout_width="match_parent" android:layout_height="180dp">
        <LinearLayout android:layout_weight="1" android:orientation="vertical" android:layout_width="0px"
                      android:layout_height="match_parent">
            <TextView
                    android:text="read1"
                    android:id="@+id/read1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="read2"
                    android:id="@+id/read2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="write1"
                    android:id="@+id/write1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_weight="1" android:orientation="vertical" android:layout_width="0px"
                      android:layout_height="match_parent">
            <TextView
                    android:text="read3"
                    android:id="@+id/read3"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="read4"
                    android:id="@+id/read4"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="write2"
                    android:id="@+id/write2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="50dp"
              android:gravity="center"
              android:id="@+id/time"
              android:text="time:"/>
</LinearLayout>
