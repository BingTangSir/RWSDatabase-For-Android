<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout android:layout_width="match_parent" android:layout_height="80dp">
        <LinearLayout android:layout_weight="1" android:orientation="vertical" android:layout_width="0px"
                      android:layout_height="match_parent">
            <TextView
                    android:text="RWSDatabase:"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/read1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout android:layout_weight="1" android:orientation="vertical" android:layout_width="0px"
                      android:layout_height="match_parent">
            <TextView
                    android:text="SQLiteOpenHelper:"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/read2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
            android:text="   测试内容在相同数据量情况下对数据库里面数字求和,每1毫秒开启一个线程."

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    android:layout_height="wrap_content"/>
    <TextView android:layout_width="match_parent" android:layout_height="50dp"
              android:gravity="center"
              android:id="@+id/time"
              android:text="time:"/>
    <TextView android:layout_width="match_parent" android:layout_height="50dp"
              android:gravity="center"
              android:text="连接池大小"/>
    <EditText android:layout_width="match_parent" android:layout_height="40dp"
              android:gravity="center"
              android:id="@+id/poolSize"
              android:inputType="number" android:text="20"/>

    <TextView android:layout_width="match_parent" android:layout_height="50dp"
              android:gravity="center"
              android:text="数据库初始数据"/>
    <EditText android:layout_width="match_parent" android:layout_height="40dp"
              android:gravity="center"
              android:id="@+id/dbSize"

              android:inputType="number" android:text="1000"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center"
              android:id="@+id/proress" android:inputType="text" android:text="1000" android:layout_gravity="right"/>
    <Button android:layout_width="match_parent" android:layout_height="40dp" android:id="@+id/control" android:text="begin test"/>
</LinearLayout>
